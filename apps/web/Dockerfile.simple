# Simple Dockerfile for Next.js without standalone mode

FROM node:18-alpine

WORKDIR /app

# Copy entire monorepo
COPY . .

# Install all dependencies
RUN npm ci

# Build the web app
RUN npm run build --workspace=apps/web

# Expose port
EXPOSE 3000

# Set environment
ENV NODE_ENV=production
ENV PORT=3000

# Run the web app
CMD ["npm", "run", "start", "--workspace=apps/web"] 